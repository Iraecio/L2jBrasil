{
  "name": "Iraecio/api",
  "description": "Cabir Api",
  "type": "library",
  "license": "BSD-3-Clause",
  "keywords": [
    "api",
    "apigility",
    "framework",
    "zf2"
  ],
  "homepage": "http://api.cabir.com.br/",
  "support": {
    "email": "irabound@hotmail.com",
    "irc": "irc://irc.freenode.net/apigility",
    "source": "https://github.com/Iraecio/api",
    "issues": "https://github.com/Iraecio/api/issues"
  },
  "config": {
    "process-timeout": 5000
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.4-dev",
      "dev-develop": "1.5-dev"
    }
  },
  "require": {
    "php": "^7.1",
    "zendframework/zend-component-installer": "^2.1",
    "zfcampus/zf-apigility": "^1.3",
    "zfcampus/zf-apigility-documentation": "^1.2",
    "zfcampus/zf-development-mode": "^3.1",
    "zfr/zfr-cors": "^1.5",
    "zfcampus/zf-apigility-doctrine": "^2.2",
    "zfcampus/zf-doctrine-querybuilder": "^1.6",
    "doctrine/doctrine-orm-module": "^1.1",
    "intervention/image": "^2.4",
    "intervention/imagecache": "^2.3",
    "mailgun/mailgun-php": "^2.4",
    "php-http/curl-client": "^1.7",
    "guzzlehttp/psr7": "^1.4"
  },
  "require-dev": {
    "zendframework/zend-developer-tools": "^1.1",
    "zfcampus/zf-apigility-admin": "^1.5.13",
    "zfcampus/zf-asset-manager": "^1.2",
    "zfcampus/zf-composer-autoloading": "^2.0",
    "zfcampus/zf-deploy": "^1.2",
    "phpunit/phpunit": "^6",
    "zendframework/zend-test": "^3.1",
    "guzzlehttp/guzzle": "^6.3"
  },
  "suggest": {
    "zfcampus/zf-apigility-doctrine": "zfcampus/zf-apigility-doctrine ^2.1 to create Doctrine-Connected REST services",
    "zfcampus/zf-http-cache": "zfcampus/zf-http-cache ^1.3 to add HTTP caching to your API",
    "zfr/zfr-cors": "zfr/zfr-cors ^1.2 to add CORS support to your API"
  },
  "autoload": {
    "psr-4": {
      "Application\\": "module/Application/src/",
      "Tenancy\\": "module/Tenancy/src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ApplicationTest\\": "module/Application/test/",
      "ApiTest\\": "module/Cabir/",
      "TenantTest\\": "module/Tenancy/"
    },
    "files": [
      "src/Apigility/constants.php"
    ]
  },
  "scripts": {
    "dev":"composer install && composer config-dev && composer dumpautoload",
    "backup" : "php phpbu.phar --configuration=phpbu.json",
    "config-dev": "@php ./src/Apigility/config-dev.php",
    "prod": "composer install --no-dev --prefer-dist --optimize-autoloader",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "development-disable": "zf-development-mode disable",
    "development-enable": "zf-development-mode enable",
    "development-status": "zf-development-mode status",
    "serve": "php -S 127.0.0.1:9090 -t public/ public/index.php",
    "test": "phpunit",
    "doctrine": "composer mapping && composer entities && composer schema-check"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packagist.org"
    },
    { "packagist": false }
  ]
}
